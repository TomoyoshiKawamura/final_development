%p#notice= notice
%h1 Credit Cards
%table
  %thead
    %tr
      %th Name
      %th Number
      %th Deadline month
      %th Deadline year
      %th User
      %th{:colspan => "3"}
  %tbody
    - @credit_cards.each do |credit_card|
      %tr
        %td= credit_card.name
        %td= credit_card.number
        %td= credit_card.deadline_month
        %td= credit_card.deadline_year
        %td= credit_card.user_id
        %td= link_to 'Show', credit_card
        %td= link_to 'Edit', edit_credit_card_path(credit_card)
        %td= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Credit Card', new_credit_card_path
